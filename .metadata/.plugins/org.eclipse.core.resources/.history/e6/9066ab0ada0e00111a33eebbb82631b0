package br.uff.ic.ubicomp.testes.knowledge;


import br.uff.ic.ubicomp.testes.base.Local;

import android.content.Intent;
import android.os.Handler;
import android.os.IBinder;
import android.os.RemoteException;
import android.util.Log;


public class ResourceAgent extends EntityAgent{
	
	private String name;
	private String id;
	private int onOff;
	private Local location;
	private Task myTask = new Task();
	

	@Override
	public IBinder onBind(Intent arg0) {
		Log.d(getClass().getSimpleName(), "onBind()");
		return myResourceServiceStub;
	}

	private IMyResourceService.Stub myResourceServiceStub = new IMyResourceService.Stub() {
		
		public void createInstance(String name, String id, int onOff, String location)
		{
			
		}
		
		public String getName() throws RemoteException {
			return name;
		}
		
		public void setName(String name) throws RemoteException {
			Resource.this.name = name;
		}
		public String getId() throws RemoteException {
			return id;
		}
		
		public String getLocation() throws RemoteException {
			return location.toString();
		}
		
		public void setLocation(int x, int y) throws RemoteException {
			location = new Local(x,y);
		}
		
		public void setOn() throws RemoteException {
			onOff = 1;
		}
		
		public void setOff() throws RemoteException {
			onOff = 0;
		}
		
		public boolean isOn() {
			return onOff == 1;
		}

	};

}
